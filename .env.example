# База данных
DB_NAME=complaints.db

# Sentiment Analysis API (APILayer)
SENTIMENT_API_KEY=your_sentiment_api_key_here
SENTIMENT_API_URL=https://api.promptapi.com/sentiment/analysis
SENTIMENT_API_TIMEOUT=10

# OpenAI для категоризации
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=50
OPENAI_TEMPERATURE=0.1

# Telegram Bot для уведомлений
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here

# Google Sheets для оплаты
GOOGLE_CREDENTIALS_PATH=path/to/google-credentials.json
GOOGLE_SPREADSHEET_ID=your_google_spreadsheet_id_here
GOOGLE_SHEET_NAME=Жалобы по оплате

# Опциональные API
SPAM_API_KEY=your_spam_api_key_here
SPAM_API_URL=https://api.apilayer.com/spamchecker?threshold=3
IP_API_URL=http://ip-api.com/json

# Настройки приложения
APP_NAME=Complaints Processing API
DEBUG=false
HOST=0.0.0.0
PORT=8000
API_BASE_URL=http://localhost:8000